<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculette"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bckg_color_blue_gradient"
    tools:context="com.publiciteweb.mobile.calculette.Calculette">

    <TextView
        android:id="@+id/txtResultat"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:background="@drawable/textview_border"
        android:textSize="70px"
        android:textStyle="bold"
        android:lines="2"
        android:textAlignment="viewEnd"
        android:paddingRight="10dp"
        android:layout_margin="10dp" />

    <GridLayout
        android:layout_below="@id/txtResultat"
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:columnCount="5"
        android:orientation="horizontal"
        tools:context=".GridLayoutActivity" >
        <Button
            android:id="@+id/btnBack"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:textStyle="bold"
            android:textSize="80px"
            android:text="&#8592;" />
        <Button
            android:id="@+id/btnCE"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="CE" />
        <Button
            android:id="@+id/btnC"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="C" />
        <Button
            android:id="@+id/btnSigned"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:text="±" />

        <Button
            android:id="@+id/btn7"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="7" />
            <Button
            android:id="@+id/btn8"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:text="8" />
        <Button
            android:id="@+id/btn9"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="9" />
        <Button
            android:id="@+id/btnDivide"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:text="/" />
        <Button
            android:id="@+id/btnPourcent"
            android:layout_column="4"
            android:layout_row="1"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="%" />
        <Button
            android:id="@+id/btn4"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="4" />
        <Button
            android:id="@+id/btn5"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:text="5" />
        <Button
            android:id="@+id/btn6"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="6" />
        <Button
            android:id="@+id/btnMutipli"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:text="*" />
        <Button
            android:id="@+id/btnFraction"
            android:layout_column="4"
            android:layout_row="2"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="1/x" />
        <Button
            android:id="@+id/btn1"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="1" />
        <Button
            android:id="@+id/btn2"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:text="2"  />
        <Button
            android:id="@+id/btn3"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="3" />
        <Button
            android:id="@+id/btnMinus"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:text="-" />
        <Button
            android:id="@+id/btnEquals"
            android:layout_column="4"
            android:layout_gravity="fill_vertical"
            android:layout_rowSpan="2"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:text="=" />
         <Button
            android:id="@+id/btn0"
            android:layout_column="0"
            android:layout_row="4"
             android:layout_gravity="fill_horizontal"
             android:layout_columnSpan="2"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:text="0" />
        <Button
            android:id="@+id/btnComma"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:text="," />
        <Button
            android:id="@+id/btnPlus"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="50dp"
            android:text="+" />

        <Button
            android:id="@+id/btnSquare"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/bckg_blue_gradient_button"
            android:layout_width="56dp"
            android:text="√"
            android:layout_height="wrap_content" />
    </GridLayout>
</RelativeLayout>
